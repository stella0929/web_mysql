			<div  class="search" style="flex: 1">
				<div class="ui icon input">
					<input onkeyup="filter()" type="text" id="value">
					<i class="search icon"></i>
				</div>
				<div class="results"></div>
			</div>
		</div>
		<br><br>
		<div class="ui inverted menu">
  			<a href="/main.html" class="active item">Home</a>
  			<a class="item" OnClick="clickFrequentPlaceTab()">Frequent place</a>
		</div>
		<br><br>
		<div style="width:80%;margin:auto">
			<h3 style="color:green">이대역  Ewha Womans Univ. Station</h3>
			<p style="color:green">&nbsp;&nbsp;서울시 마포구 신촌로 180</p>
		</div>
		<br><br>
		<table class="ui celled table" style="width: 80%; margin:auto">
  			<thead>
    			<tr>
      			<th>칸 번호</th>
      			<th>안전도</th>
      			<th>업데이트 날짜</th>
    			</tr>
  			</thead>
  			<tbody>
				<script>
				var number = <%=number%>
				var rows = <%-rows%>
				for(var i=0;i<number;i++){
				var stallNumber= rows[i].stallNumber
				var safety = rows[i].safety
				var updated_at = rows[i].updated_at.replace(/T/,' ').replace(/\..+/,'')
		if(safety=="안전"){
					document.write("<tr>")
					document.write("<td>")
					document.write(stallNumber)
					document.write("</td>")
					document.write("<td class=\"positive\">")
					document.write(safety)
					document.write("</td>")
					document.write("<td>")
					document.write(updated_at)
					document.write("</td>")
					document.write("</tr>")
		}
					else{
				   document.write("<tr>")
					document.write("<td>")
					document.write(stallNumber)
					document.write("</td>")
					document.write("<td  class=\"negative\">")
					document.write(safety)
					document.write("</td>")
					document.write("<td>")
					document.write(updated_at)
					document.write("</td>")
					document.write("</tr>")	
					}}
				</script>
  			</tbody>
		</table>
	
	<br><br><br>
		<script src="/js/semantic.min.js"></script>
	</body>
</html>